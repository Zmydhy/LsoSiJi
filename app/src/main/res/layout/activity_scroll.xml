<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/lin_scroll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_scroll_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text1"/>
        <Button
            android:id="@+id/btn_scroll_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text2"/>
        <Button
            android:id="@+id/btn_scroll_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text3"/>
        <Button
            android:id="@+id/btn_scroll_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="text4"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@+id/lin_scroll"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:layout_height="match_parent">
        <View
            android:id="@+id/view_scroll_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/popue"/>
    </RelativeLayout>
    <com.zmy.laosiji.CustomView.StickScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/popue"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/green"/>
    </com.zmy.laosiji.CustomView.StickScrollView>>


</RelativeLayout>